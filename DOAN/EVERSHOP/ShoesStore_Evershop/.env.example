# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=evershop

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Environment (development | staging | production)
NODE_ENV=development

# Debug logging
DEBUG=evershop:*

# Application port
PORT=3000

# Application URL
APP_URL=http://localhost:3000

# ==============================================================================
# REDIS & CACHE CONFIGURATION
# ==============================================================================

# Redis connection settings (for caching, sessions, and queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ==============================================================================
# SESSION CONFIGURATION
# ==============================================================================

# Session settings
SESSION_SECRET=your-secret-key-change-this-in-production
SESSION_STORE=redis

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# CORS settings
CORS_ORIGIN=http://localhost:3000

# API key for external services (if needed)
API_KEY=your-api-key

# ==============================================================================
# DOCKER CONFIGURATION
# ==============================================================================

# For Docker Compose services
COMPOSE_PROJECT_NAME=evershop
COMPOSE_FILE=docker-compose.yml

# ==============================================================================
# PAYMENT GATEWAYS (optional)
# ==============================================================================

# Stripe configuration
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# PayPal configuration
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# ==============================================================================
# EMAIL CONFIGURATION (optional)
# ==============================================================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================

# Log level (error | warn | info | debug | trace)
LOG_LEVEL=info

# Sentry for error tracking (optional)
SENTRY_DSN=

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================

# Test database (used in CI/CD)
DB_NAME_TEST=evershop_test

# ==============================================================================
# PRODUCTION DEPLOYMENT
# ==============================================================================

# Enable HTTPS
FORCE_HTTPS=true

# CDN URL for static assets (optional)
CDN_URL=

# Image optimization
IMAGE_OPTIMIZATION_ENABLED=true

# ==============================================================================
# NOTES
# ==============================================================================
# - For local development: copy to .env and modify values
# - For Docker: environment variables can be passed via docker-compose.yml
# - For GitHub Actions: set secrets in repository settings
# - For Vercel: set variables in project settings
# - Never commit .env file with real credentials to repository
# ==============================================================================
